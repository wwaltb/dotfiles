#!/bin/bash

if [ "$#" -ne 2 ]; then
	echo "Usage: $0 input_dir output_dir"
	exit 1
fi

input_dir="$1"
output_dir="$2"

mkdir -p "$output_dir"

total_files=$(ls -1 "$input_dir" | wc -l)
count=1

for file in "$input_dir"/*; do
	if [ -f "$file" ]; then
		filename=$(basename -- "$file")
		filename_no_ext="${filename%.*}"

		ffmpeg -i "$file" -c:v mpeg4 -vtag DIVX -vf scale=640:480 -r 29.97 -b:v 1500k -c:a mp3 -b:a 128k "$output_dir/$filename_no_ext.avi" 2>&1
		echo "($count/$total_files) Encoded $filename"
		((count++))
	fi
done

echo "Encoding complete"
